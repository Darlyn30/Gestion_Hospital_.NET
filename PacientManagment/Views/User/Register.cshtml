@using PacientManagment.Core.Application.ViewModels.User;
@model SaveUserViewModel
@{
    ViewData["Title"] = "Sign Up";
}

<div class="register-container">
    <h3 class="text-center mb-4">Create an Account</h3>
    <form asp-controller="User" asp-action="Register" method="POST">
        <div class="mb-3 input-group">
            <label asp-for="Name" class="form-label">Name: </label>
            <input asp-for="Name" class="form-control" required placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3 input-group">
            <label asp-for="LastName" class="form-label">Last Name: </label>
            <input asp-for="LastName" class="form-control" required placeholder="Last Name" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Username" class="form-label">User Name: </label>
            <input asp-for="Username" class="form-control" required/>
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="mb-3 input-group">
            <label asp-for="Email" class="form-label">Email: </label>
            <input asp-for="Email" class="form-control" required/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3 input-group">
            <label asp-for="Password" class="form-label">Password: </label>
            <input asp-for="Password" class="form-control" placeholder="Password" required/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3 input-group">
            <label asp-for="ConfirmPassword" class="form-label">Password: </label>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label">Phone Number: </label>
            <input asp-for="Phone" class="form-control" required placeholder="Phone Number" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <input asp-for="Role" type="hidden" value="Administrator"/>

        <button type="submit" class="btn btn-primary w-100">Sign Up</button>
    </form>
    <div class="text-center mt-3">
        <span class="login-link">Already have an account? <a asp-controller="User" asp-action="Index" class="text-decoration-none">Login</a></span>
    </div>
</div>